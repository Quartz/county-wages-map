#title
	position absolute
	top 10px
	left 10px
	margin 0
	padding 0

.footer
	position absolute
	margin 0
	padding 0
	font-family $qz-sans
	color $qz-gray-2
	font-size 14px

	&.left
		left 10px

	&.right
		right 10px

svg
	font-size 20px
	font-family: $qz-sans
	background-color $qz-map-water

.graticules path
	fill none
	stroke $qz-map-graticule
	stroke-width 0.1%

// Scale bar
.scale-bar
	line
		stroke $qz-gray-2
		stroke-width 5px

	text
		fill $qz-gray-2
		font-size 100%
		alignment-baseline: middle
		-webkit-font-smoothing antialiased

// responsive styles
@media screen and (max-width $width-mobile)
	svg
		font-size 14px
